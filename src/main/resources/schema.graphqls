type Author{
    lastName: String!
    firstName: String!
}
type Book{
    titel: String!
    ISBN: String!
    publishedYear: Int
    author: Author!
    id: Int!
}
input BookInput{
    lastNameAuthor: String!
    firstNameAuthor: String!
    titel: String!
    ISBN : String!
    publishedYear: Int
    id: Int!
}

 type Query{
    bookById(id:Int!) : Book


}

 type Mutation{
     update(Input: BookInput!) : Book
     delete(ISBN: String!):Boolean
     create(Input: BookInput!) :Book
 }
